@model List<TodoApp.Models.Todo>
@{
    ViewData["Title"] = "Simple Todo List";
}

<!DOCTYPE html>
<html>
<head>
    <title>Simple Todo List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        h2 {
            margin-bottom: 20px;
        }

        form {
            margin-bottom: 15px;
        }

        input[type="text"] {
            width: 70%;
            padding: 8px;
            margin-right: 8px;
        }

        button {
            padding: 8px 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        .info {
            background-color: #e7f3fe;
            padding: 10px;
            border: 1px solid #b3d7ff;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Simple Todo List</h2>

        <form method="post" action="/Home/Add">
            <input type="text" name="title" placeholder="Add a new task..." required />
            <button type="submit">Add</button>
        </form>

        @if (!Model.Any())
        {
            <div class="info">No tasks yet.</div>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var todo in Model)
                    {
                        <tr>
                            <td>@todo.Title</td>
                            <td>@(todo.IsCompleted ? "Done" : "Pending")</td>
                            <td>
                                <form method="post" action="/Home/Toggle" style="display:inline;">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <button type="submit">Toggle</button>
                                </form>
                                <form method="post" action="/Home/Delete" style="display:inline;">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
