@model int
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Multiplication Table of @Model</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container py-5">
        <h1 class="text-center mb-4 text-primary">Multiplication Table Generator</h1>

        <div class="card shadow mb-4">
            <div class="card-body">
                <form asp-controller="Home" asp-action="Index" class="row g-3">
                    <div class="col-auto">
                        <label asp-for="@Model" class="form-label fw-bold">Enter a number:</label>
                        <input type="text" asp-for="@Model" name="num" class="form-control" placeholder="Enter number" />
                    </div>
                    <div class="col-auto align-self-end">
                        <button type="submit" class="btn btn-primary mt-2">Generate</button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model != 0)
        {
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Multiplication Table of @Model</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Number</th>
                                <th scope="col">Times</th>
                                <th scope="col">Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <tr>
                                    <td>@Model</td>
                                    <td>@i</td>
                                    <td>@(Model * i)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
